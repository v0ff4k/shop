{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% include "FOSUserBundle:ChangePassword:change_password_content.html.twig" %}
{% endblock fos_user_content %}


{% block style %}
    .hidden_on_login{display: none;}
    .main-center{max-width: 400px;}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $(".registration").addClass("active");
            //wrap in all style
            $(".form-horizontal > div").not("#fos_user_change_password").addClass("form-group");
            //wrap last, 2nd level of div's
            $("#fos_user_change_password_form > div").addClass("form-group");
        });
    </script>
{% endblock %}